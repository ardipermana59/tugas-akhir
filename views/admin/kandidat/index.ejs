<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <%= title %>
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="data" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Foto</th>
                            <th>Name</th>
                            <th style="width: 7%;">Aksi</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
<%- include('modal_tambah_kandidat') %>
<%- include('modal_edit_kandidat') %>
<script>
    $(document).ready(function () {
        const dataTableConfig = {
            processing: true,
            serverSide: true,
            ajax: {
                url: "/api/kandidat/data",
                data: function (d) {
                    d.name = d.search.value;
                }
            },
            columns: [
                {
                    data: "foto",
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        return `
                                <img style="display: block; margin: 0 auto; max-width: 80px;" src="/images/${data}" class="table-img" alt="${row.name}">
                            `;
                    }
                }
                ,
                { data: "name" },
                {
                    data: null,
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        return `
                                <button class="btn btn-warning btn-sm edit-btn" data-id="${row.id}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger btn-sm delete-btn" data-id="${row.id}">
                                    <i class="fas fa-trash"></i>
                                </button>
                                `;
                    }
                }
            ],
            lengthMenu: [[5, 10, 15, 50, 100], [5, 10, 15, 50, 100]],
            dom: `
                    <"row mb-3"B>
                    <"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>
                    t
                    <"row pt-2"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>
                    r
                `,
            buttons: [
                {
                    text: '<i class="fas fa-user-plus"></i> Tambah Kandidat',
                    className: 'btn btn-primary mr-2 rounded',
                    action: function (e, dt, node, config) {
                        $('#modalAddData').modal('show');
                    }
                },
                {
                    text: '<i class="fas fa-sync-alt"></i>',
                    className: 'btn btn-secondary rounded',
                    action: function (e, dt, node, config) {
                        dt.ajax.reload(); 
                    }
                }
            ],
        };

        const table = $("#data").DataTable(dataTableConfig);

        $('.dt-buttons .btn-secondary').removeClass('btn-secondary').addClass('btn-primary');

        // Add Data
        $('#formAddData').on('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);

            Swal.fire({
                title: 'Processing...',
                text: 'Please wait',
                icon: 'info',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            $.ajax({
                url: '/api/kandidat/add',
                method: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    Swal.fire(
                        'Success!',
                        'Data has been added.',
                        'success'
                    );
                    $('#modalAddData').modal('hide');
                    $('#formAddData')[0].reset();
                    table.ajax.reload();
                },
                error: function (xhr, status, error) {
                    if (xhr.status === 400) {
                        Swal.fire(
                            'Failed!',
                            xhr.responseJSON.error || 'There was an error adding the data.',
                            'error'
                        );
                    } else {
                        Swal.fire(
                            'Failed!',
                            'There was an error adding the data.',
                            'error'
                        );
                    }
                }
            });
        });

        // Find Data
        $('#data').on('click', '.edit-btn', function () {
            const id = $(this).data('id');

            $.ajax({
                url: `/api/kandidat/${id}`,
                method: 'GET',
                success: function (data) {
                    $("#modalEditData input[name='id']").val(data.id);
                    $("#modalEditData input[name='name']").val(data.name);
                    $('#modalEditData').modal('show');
                },
                error: function (xhr, status, error) {
                    Swal.fire(
                        'Failed!',
                        'There was an error fetching the data.',
                        'error'
                    );
                }
            });
        });

        // Update Data
        $('#formEditData').on('submit', function (e) {
            e.preventDefault();

            const id = $("#modalEditData input[name='id']").val();
            const formData = $(this).serialize();

            Swal.fire({
                title: 'Processing...',
                text: 'Please wait',
                icon: 'info',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            $.ajax({
                url: `/api/kandidat/update/${id}`,
                method: 'PUT',
                data: formData,
                success: function (response) {
                    Swal.fire(
                        'Success!',
                        'Data has been updated.',
                        'success'
                    );
                    $('#modalEditData').modal('hide');
                    table.ajax.reload();
                },
                error: function (xhr, status, error) {
                    Swal.fire(
                        'Failed!',
                        'There was an error updating the data.',
                        'error'
                    );
                }
            });
        });


        // Delete Data
        $('#data').on('click', '.delete-btn', function () {
            const id = $(this).data('id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/api/kandidat/delete/${id}`,
                        method: 'DELETE',
                        success: function (response) {
                            Swal.fire(
                                'Deleted!',
                                'Data has been deleted.',
                                'success'
                            );
                            table.ajax.reload();
                        },
                        error: function (xhr, status, error) {
                            if (xhr.status === 404) {
                                Swal.fire(
                                    'Failed!',
                                    'Data not found',
                                    'error'
                                );
                            } else {
                                Swal.fire(
                                    'Failed!',
                                    'There was an error deleting the data.',
                                    'error'
                                );
                            }
                        }
                    });
                }
            });
        });
    });
</script>
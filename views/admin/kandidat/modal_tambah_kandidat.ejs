<div class="modal fade" id="modalAddData" tabindex="-1" role="dialog" aria-labelledby="modalAddDataLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAddDataLabel">Tambah Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formAddData">
                    <div class="form-group text-center">
                        <img id="previewImage" class="rounded-circle mx-auto d-block" src="/images/noimage.png" alt="Preview Image" style="width: 150px; height: 150px;">
                        <input type="file" id="image" name="image" accept="image/*" style="display: none;">
                        <button id="btnImage" type="button" class="btn btn-primary">Pilih Gambar</button>
                    </div>
                    <div class="form-group">
                        <label for="name">Nama</label>
                        <input type="text" class="form-control" id="name" name="name" required autocomplete="off">
                    </div>
                    <button type="submit" class="btn btn-primary">Tambah</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('btnImage').addEventListener('click', function() {
        document.getElementById('image').click();
    });

    document.getElementById('image').addEventListener('change', function() {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const previewImage = document.getElementById('previewImage');
                previewImage.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    });
</script>